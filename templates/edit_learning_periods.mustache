<h5 class="text-center font-weight-bold">{{#str}}manage_periods, local_sc_learningplans{{/str}}</h5>
<div class="">
    <div class="d-flex justify-content-end pt-4">
        <button id="add_new_periods" class="btn btn-primary" data-toggle="modal" data-target="#addingPeriods">{{#str}}btnaddperiods, local_sc_learningplans{{/str}}</button>
    </div>
    
    {{#hasperiods}}
    <ul class="list-group pt-4">
        {{#listperiods}}
        <li class="list-group-item d-flex justify-content-between align-items-center" period-id="{{id}}">
            <div class="w-100">
                <h5 class="mb-1">{{name}}</h5>
                <div>
                    <i class="fa fa-calendar text-muted"></i>
                    <small class="text-muted">{{numSubperiods}} {{#str}}subperiods,local_sc_learningplans{{/str}}</small>
                </div>
                <span class="badge badge-pill badge-info" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="{{credits}} creditos">{{credits}}</span>
            </div>
            <button id="editperiod-{{id}}" edit-periodid="{{id}}" class="btn px-1" data-toggle="modal" data-target="#editNamePeriod-{{id}}" data-toggle="tooltip" data-placement="bottom" data-original-title="Edit Name Period">
                <i class="lp_icon fa fa-pencil fa-fw text-muted" data-toggle="tooltip" data-placement="bottom" data-original-title="Edit Period"></i>
            </button>
            <button id="btndeleteperiod" period-id="{{id}}" class="btn px-1" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Delete Period">
                <i class="lp_icon fa fa-trash fa-fw text-muted"></i>
            </button>
        </li>
        
        {{> local_sc_learningplans/modals/edit_period }}
      {{/listperiods}}
    </ul>
    {{/hasperiods}}
    
    {{^hasperiods}}
    <h5 class="text-center pt-4">{{#str}}not_periods, local_sc_learningplans{{/str}}</h5>
    {{/hasperiods}}
    
    {{> local_sc_learningplans/modals/adding_period }}
</div>