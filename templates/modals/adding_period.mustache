    <div class="modal fade" id="addingPeriods" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    {{! Start of Modal Header Section }}
                    <h5 class="modal-title text-center w-100 font-weight-bold" id="exampleModalLabel">{{#str}}addnewperiods, local_sc_learningplans{{/str}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='visibility: hidden;'>
                      <span aria-hidden="true">&times;</span>
                    </button>
                    {{! End of Modal Header Section }}
                </div>
                
                <div class="modal-body">
                    {{! Start of Modal Body Section }}
                    <div class="form-group">
                        <label>{{#str}}name_period, local_sc_learningplans{{/str}}</label>
                        <input required class="form-control" id="name_new_period" type="text">
                    </div>
                    
                    <div class="form-group">
                        <label>{{#str}}periodmonths, local_sc_learningplans{{/str}}</label>
                        <input required class="form-control" id="vigency_new_period" type="text">
                    </div>
                    
                    <div class="form-group">
                        {{! radio buttons for selecting subperiods }}
                        <label class="w-100">{{#str}} add_subperiods, local_sc_learningplans {{/str}} </label>
                        <input type="radio" id="notsubperiod" name="check_subperiod" value="0" checked>
                        <label for="notsubperiod">{{#str}} no {{/str}}</label>
                        <input type="radio" id="addsubperiod" name="check_subperiod" value="1">
                        <label for="addsubperiod">{{#str}} yes {{/str}}</label>
                        <small class="w-100 d-block text-muted">{{#str}} divided_into_bimesters, local_sc_learningplans {{/str}}</small>
                        {{! end of radio buttons for selecting subperiods }}
                    </div>
                    {{! End of Modal Body Section }}
                </div>
                
                <div class="modal-footer">
                    {{! Start of Modal Footer Section }}
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} close_modal, local_sc_learningplans {{/str}}</button>
                    <button id="save_new_period" type="button" class="btn btn-primary">{{#str}} btn_add_course, local_sc_learningplans {{/str}}</button>
                    {{! End of Modal Footer Section }}
                </div>
            </div>
        </div>
    </div>